<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newWorkout_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fragments.workout.NewWorkoutFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/newWorkout_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:text="Push Day"
            android:textSize="@dimen/font_large" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/new_workout_rv_exercises"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:scrollbars="vertical" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/new_workout_add_exercise_button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:background="@drawable/rounded_button_default"
        android:text="Add New Exercise" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/new_workout_delete_exercise_button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="@dimen/spacing_normal"
        android:layout_marginVertical="@dimen/spacing_small"
        android:background="@drawable/rounded_button_delete"
        android:text="Delete Workout" />
</androidx.appcompat.widget.LinearLayoutCompat>